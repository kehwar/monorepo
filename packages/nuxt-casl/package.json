{
    "name": "@kehwar/nuxt-casl",
    "type": "module",
    "version": "0.0.10",
    "description": "CASL integration for Nuxt",
    "license": "MIT",
    "repository": "kehwar/nuxt-casl",
    "exports": {
        ".": {
            "types": "./dist/types.d.ts",
            "import": "./dist/module.mjs",
            "require": "./dist/module.cjs"
        }
    },
    "main": "./dist/module.cjs",
    "types": "./dist/types.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "prepack": "nuxt-module-build build",
        "dev": "nuxi dev playground",
        "dev:build": "nuxi build playground",
        "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
        "release": "pnpm run prepack && pnpm publish && git push --follow-tags",
        "lint": "eslint .",
        "test": "vitest --ui --silent"
    },
    "peerDependencies": {
        "@casl/ability": "^6.5.0",
        "@ucast/mongo2js": "^1.3.4",
        "type-fest": "^4.8.3"
    },
    "dependencies": {
        "@casl/ability": "^6.5.0",
        "@nuxt/kit": "^3.9.3",
        "@ucast/mongo2js": "^1.3.4",
        "dedent": "^1.5.1",
        "fast-glob": "^3.3.2",
        "jsonc-simple-parser": "^3.0.0",
        "lodash": "^4.17.21",
        "pathe": "^1.1.2"
    },
    "devDependencies": {
        "@kehwar/eslint-config": "workspace:^",
        "@nuxt/devtools": "^1.0.8",
        "@nuxt/eslint-config": "^0.2.0",
        "@nuxt/module-builder": "^0.5.5",
        "@nuxt/schema": "^3.9.3",
        "@nuxt/test-utils": "^3.11.0",
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.11.10",
        "@vitest/ui": "1.2.2",
        "bumpp": "^9.3.0",
        "eslint": "^8.56.0",
        "nuxt": "^3.9.3",
        "type-fest": "^4.10.1",
        "vitest": "^1.2.2"
    }
}
